:javascript
	$(document).on('ready page:load', function () {
		$("#breakfast").click(function(){
		  $(".lunch").hide();
		  $(".dinner").hide();
		  $(".drinks").hide();
		  $(".show").show();
		});
		$("#show").click(function(){
		  $("p").show();
		});
	});




.col-xs-12
	%h1 Menu

	- if (@food_items.empty?)
		%h2 Sorry, no food found :(
	- else

.btn-group{"aria-label" => "Sections", :role => "group"}
	%button#breakfast.btn.btn-secondary Breakfast
	%button#lunch.btn.btn-secondary Lunch
	%button#dinner.btn.btn-secondary Dinner
	%button#drinks.btn.btn-secondary Drinks
%br
%br

.col-xs-12
	.row
		.services
			%ul#accordion1.nav.nav-stacked
				%li.panel
					%a{"data-parent" => "#accordion1", "data-toggle" => "collapse", :href => "#Audit"} Accounding and Audit
				%ul#Audit.collapse
					%li Audit & Taxation
	          
.col-xs-12
	.row
		- @food_items.each do |food_item|
			.col-xs-6
				.card.card-inverse
					%img.card-img{:alt => "Food Image", "src" => "#{food_item.image_url}", :width => "100%"}
					.card-img-overlay
						%h4.card-title 
							= link_to food_item.name, food_item
						%p.card-text #{food_item.description}
						%p.card-text VND #{food_item.price}
						= link_to "Order", new_food_item_order_path(food_item), class: 'btn btn-success'

